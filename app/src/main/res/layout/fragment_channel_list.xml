<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="controlViewModel"
            type="org.andan.android.tvbrowser.sonycontrolplugin.ControlViewModel" />
    </data>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listChannelMap"
                android:name="org.andan.android.tvbrowser.sonycontrolplugin.ChannelMapFragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".ChannelMapFragment"
                tools:listitem="@layout/map_channnel_item"
                android:background="@color/grey_900"/>

    </HorizontalScrollView>
</layout>