<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="tvbChannelName"
            type="String" />

        <variable
            name="channelPosition"
            type="Integer" />

        <variable
            name="channelName"
            type="String" />

        <variable
            name="channelSourceWithType"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_800"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <TextView
            android:id="@+id/channel_map_channelid"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:text="@{Integer.toString(channelPosition)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="8888" />

        <TextView
            android:id="@+id/channel_map_tvb_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="@{tvbChannelName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/channel_map_channelid"
            app:layout_constraintTop_toTopOf="@+id/channel_map_channelid"
            tools:text="Eurosport Deutschland Eurosport Deutschland Eurosport Deutschland Eurosport Deutschland" />

        <ImageView
            android:id="@+id/channel_map_mapped_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:contentDescription="TODO"
            android:tint="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="@+id/channel_map_channelid"
            app:layout_constraintTop_toTopOf="@+id/channel_map_channel_name"
            app:srcCompat="@drawable/ic_action_tv" />


        <TextView
            android:id="@+id/channel_map_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp"
            android:text="@{channelName}"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/channel_map_tvb_channel_name"
            app:layout_constraintTop_toBottomOf="@+id/channel_map_tvb_channel_name"
            tools:text="Eurosport Deutschland HD 1234" />

        <ImageView
            android:id="@+id/channel_map_channel_source_icon"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="TODO"
            android:tint="@android:color/holo_blue_dark"
            android:visibility="@{(channelSourceWithType.length >0) ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toEndOf="@+id/channel_map_channel_name"
            app:layout_constraintTop_toTopOf="@id/channel_map_channel_source"
            app:srcCompat="@drawable/ic_input" />

        <TextView
            android:id="@+id/channel_map_channel_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="@{channelSourceWithType}"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/channel_map_channel_source_icon"
            app:layout_constraintTop_toTopOf="@+id/channel_map_channel_name"
            tools:text="dvbs (general)" />

        <TextView
            android:id="@+id/channelMapText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/channel_map_select_channel_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/channel_map_channel_name" />


        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_500"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            app:layout_constraintTop_toBottomOf="@+id/channelMapText"
            tools:layout_editor_absoluteX="4dp" />

        <ListView
            android:id="@+id/channelMapChannelListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/grey_900"
            android:choiceMode="singleChoice"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1">

        </ListView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>