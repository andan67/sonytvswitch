<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_program_list">

    <fragment
        android:id="@+id/nav_manage_control"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.ManageControlFragment"
        android:label="@string/menu_manage_control"
        tools:layout="@layout/fragment_manage_control" />

    <dialog
        android:id="@+id/nav_add_control"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.AddControlDialogFragment"
        android:label="@string/menu_add_control"
        tools:layout="@layout/fragment_add_control_dialog" />

    <fragment
        android:id="@+id/nav_program_list"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.ProgramListFragment"
        android:label="@string/menu_show_programs"
        tools:layout="@layout/fragment_program_list" >
        <action
            android:id="@+id/action_nav_program_list_to_activeProgramDetailsFragment"
            app:destination="@id/activeProgramDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_channel_list"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.ChannelMapFragment"
        android:label="@string/menu_channel_map_fragment_label"
        tools:layout="@layout/fragment_channel_list" >
        <action
            android:id="@+id/action_nav_channel_list_to_channelMapSingleFragment"
            app:destination="@id/channelMapSingleFragment" />
    </fragment>

    <fragment
        android:id="@+id/channelMapSingleFragment"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.ChannelMapSingleFragment"
        android:label="@string/channel_map_label"
        tools:layout="@layout/fragment_channel_single"/>

    <dialog
        android:id="@+id/nav_enter_challenge"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.EnterChallengeDialogFragment"
        android:label="EnterChallengeDialogFragment"
        tools:layout="@layout/fragment_enter_challenge_code_dialog"/>

    <fragment
        android:id="@+id/nav_remote_control"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.RemoteControlFragment"
        android:label="@string/menu_remote_control"
        tools:layout="@layout/fragment_remote_control"/>

    <fragment
        android:id="@+id/nav_help"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.HelpFragment"
        android:label="@string/menu_help"
        tools:layout="@layout/fragment_help"/>

    <fragment
        android:id="@+id/nav_settings"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.SettingsFragment"
        android:label="@string/menu_settings"/>

    <fragment
        android:id="@+id/activeProgramDetailsFragment"
        android:name="org.andan.android.tvbrowser.sonycontrolplugin.ActiveProgramDetailsFragment"
        android:label="@string/active_program_fragment_label"
        tools:layout="@layout/fragment_active_program_details"/>

</navigation>